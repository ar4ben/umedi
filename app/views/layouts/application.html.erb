<!DOCTYPE html>
<html>
  <head>
    <title>Umedi</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
            
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="<%= root_path %>" class="brand-logo">Umedi</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li><a href="#"><i class="material-icons">view_list</i></a></li>
          <li><a href="<%= pages_about_path %>"><i class="material-icons">account_box</i></a></li>
          <li><a href="<%= pages_contacts_path %>"><i class="material-icons">location_on</i></a></li>
        </ul>
      </div>
    </nav>

    <ul class="sidenav" id="mobile-demo">
      <li><a href="#"><i class="material-icons">view_list</i></a></li>
      <li><a href="<%= pages_about_path %>"><i class="material-icons">account_box</i></a></li>
      <li><a href="<%= pages_contacts_path %>"><i class="material-icons">location_on</i></a></li>
    </ul>
    
    <div class="row">
      <div class="col m10 offset-m1">
        <%= yield %>
      </div>
    </div>

    <script>
      $(document).ready(function(){
        $('.sidenav').sidenav();
      });
    </script>
  </body>
</html>
